<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">



    //Dados icone histórico
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/relogio"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/relogio2"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="8dp"/>

    //Dados da operação
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_conta"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="end"
        android:layout_marginEnd="25dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    //Dados do resultado
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_resultado"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="end"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-8dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    //Linha de divisão
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:focusable="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        //Dados Botão C
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_limpar"
            style="@style/Operacoes_botao"
            android:text="C"
            />

        //Dados Botão apagar
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_apagar"
            style="@style/Operacoes_botao"
            android:src="@drawable/backorange" />

        //Dados Botão mod
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_mod"
            style="@style/Operacoes_botao"
            android:text="%" />

        //Dados Botão divisão
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_divisao"
            style="@style/Operacoes_botao"
            android:text="÷" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        //Dados Botão 7
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_7"
            style="@style/Numeros_botao"
            android:text="7" />

        //Dados Botão 8
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_8"
            style="@style/Numeros_botao"
            android:text="8" />

        //Dados Botão 9
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_9"
            style="@style/Numeros_botao"
            android:text="9" />

        //Dados Botão multiplicação
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_multiplicaçao"
            style="@style/Operacoes_botao"
            android:text="x" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        //Dados Botão 4
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_4"
            style="@style/Numeros_botao"
            android:text="4" />

        //Dados Botão 5
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_5"
            style="@style/Numeros_botao"
            android:text="5" />

        //Dados Botão 6
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_6"
            style="@style/Numeros_botao"
            android:text="6" />

        //Dados Botão subtração
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_subtracao"
            style="@style/Operacoes_botao"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        //Dados Botão 1
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_1"
            style="@style/Numeros_botao"
            android:text="1" />

        //Dados Botão 2
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_2"
            style="@style/Numeros_botao"
            android:text="2" />

        //Dados Botão 3
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_3"
            style="@style/Numeros_botao"
            android:text="3" />

        //Dados Botão Adição
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_soma"
            style="@style/Operacoes_botao"
            android:text="+" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        //Dados espaço vazio
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_nada"
            style="@style/Numeros_botao"
            android:text="" />

        //Dados Botão 0
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_0"
            style="@style/Numeros_botao"
            android:text="0" />

        //Dados Botão virgula
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_virgula"
            style="@style/Numeros_botao"
            android:text="," />

        //Dados Botão igual
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_igual"
            style="@style/igual_botao"
            android:text="=" />

    </LinearLayout>


    
    
    
</LinearLayout>

