<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/relogio"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/relogio2"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/text_conta"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="5+5"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="end"
        android:layout_marginEnd="25dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/text_resultado"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:gravity="end"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="-8dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:focusable="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_limpar"
            style="@style/Operacoes_botao"
            android:text="C"
            />

        <ImageView
            android:id="@+id/bt_apagar"
            style="@style/Operacoes_botao"
            android:src="@drawable/backorange" />
        <Button
            android:id="@+id/bt_mod"
            style="@style/Operacoes_botao"
            android:text="%" />
        <Button
            android:id="@+id/bt_divisao"
            style="@style/Operacoes_botao"
            android:text="÷" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_7"
            style="@style/Numeros_botao"
            android:text="7" />

        <Button
            android:id="@+id/bt_8"
            style="@style/Numeros_botao"
            android:text="8" />
        <Button
            android:id="@+id/bt_9"
            style="@style/Numeros_botao"
            android:text="9" />
        <Button
            android:id="@+id/bt_multiplicaçao"
            style="@style/Operacoes_botao"
            android:text="x" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_4"
            style="@style/Numeros_botao"
            android:text="4" />

        <Button
            android:id="@+id/bt_5"
            style="@style/Numeros_botao"
            android:text="5" />
        <Button
            android:id="@+id/bt_6"
            style="@style/Numeros_botao"
            android:text="6" />
        <Button
            android:id="@+id/bt_subtracao"
            style="@style/Operacoes_botao"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            style="@style/Numeros_botao"
            android:text="1" />

        <Button
            android:id="@+id/bt_2"
            style="@style/Numeros_botao"
            android:text="2" />
        <Button
            android:id="@+id/bt_3"
            style="@style/Numeros_botao"
            android:text="3" />
        <Button
            android:id="@+id/bt_adicao"
            style="@style/Operacoes_botao"
            android:text="+" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_nada"
            style="@style/Numeros_botao"
            android:text="" />

        <Button
            android:id="@+id/bt_0"
            style="@style/Numeros_botao"
            android:text="0" />
        <Button
            android:id="@+id/bt_virgula"
            style="@style/Numeros_botao"
            android:text="," />
        <Button
            android:id="@+id/bt_igual"
            style="@style/igual_botao"
            android:text="=" />

    </LinearLayout>


    
    
    
</LinearLayout>

