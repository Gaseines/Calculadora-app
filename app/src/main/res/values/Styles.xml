<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Container_botao">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="Operacoes_botao" parent="Container_botao">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">35dp</item>
    </style>

    <style name="Numeros_botao" parent="Container_botao">
        <item name="android:background">@drawable/botao_clicado_numeros</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="igual_botao" parent="Container_botao">
        <item name="android:background">@drawable/botao_clicado_resultado</item>
        <item name="android:textColor">@color/white</item>

    </style>



</resources>